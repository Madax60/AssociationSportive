<form method="post" action="{{ path('type_edit', {'id': type.id}) }}" onsubmit="return confirm('Etes vous sur de modifier ce type ?');">
    <input type="hidden" name="_method" value="Modifier">
    <input type="hidden" name="_token" value="{{ csrf_token('modifier' ~ type.id) }}">

    <div class="container my-5">
        <button class="btn bg-primary px-3 py-2 rounded text-white">Modifier</button>
    </div>
</form>

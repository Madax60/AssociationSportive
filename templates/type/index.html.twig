{% extends 'base.html.twig' %}

{% block title %}Type{% endblock %}

{% block body %}
    <h1 class="my-3 text-center">Liste des types</h1>

    <div class="container my-5">
        <a class="bg-primary p-3 rounded text-white" href="{{ path('type_new') }}">Ajouter un type</a>
    </div>

    <table class="container table">
        <thead>
            <tr class="row text-center">
                <th class="col-1">Id</th>
                <th class="col">Nom du type</th>
                <th class="col-2">Action</th>
            </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr class="row text-center">
                <td class="col-1">{{ type.id }}</td>
                <td class="col">{{ type.nom }}</td>
                <td class="col-2">
                    <a href="{{ path('type_show', {'id': type.id}) }}"><i style="font-size: 24px" class="fas fa-eye"></i></a>
                    <a class="mx-2" href="{{ path('type_edit', {'id': type.id}) }}"><i style="font-size: 24px" class="fas fa-pencil-alt"></i></a>
                    <a href="{{ path('type_delete', {'id': type.id}) }}"><i style="font-size: 24px" class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">Il n'y a aucun type</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

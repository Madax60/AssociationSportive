{% extends 'base.html.twig' %}

{% block title %}Type{% endblock %}

{% block body %}
<div class="container minVhTheme mx-auto ptNav text-center">

    <h1 class="my-3 text-center mt-5">Liste des types</h1>

    <div class="d-flex my-5">
        <a class="btn bg-primary mr-auto rounded text-white" href="{{ path('type_new') }}">Ajouter un type</a>
    </div>

    <table class="table table-dark">
        <thead>
            <tr class="d-flex text-center">
                <th class="col">Nom du type</th>
                <th class="col-3">Action</th>
            </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr class="d-flex text-center">
                <td class="col">{{ type.nom }}</td>
                <td class="col-3">
                    <a href="{{ path('type_show', {'id': type.id}) }}"><i style="font-size: 24px" class="fas fa-eye"></i></a>
                    <a class="mx-2" href="{{ path('type_edit', {'id': type.id}) }}"><i style="font-size: 24px" class="fas fa-pencil-alt"></i></a>
                    <a href="{{ path('type_delete', {'id': type.id}) }}"><i style="font-size: 24px" class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">Il n'y a aucun type</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

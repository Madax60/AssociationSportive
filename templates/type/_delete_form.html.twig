<form method="post" action="{{ path('type_delete', {'id': type.id}) }}" onsubmit="return confirm('Etes vous sur de supprimer ce type ?');">
    <input type="hidden" name="_method" value="Supprimer">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ type.id) }}">

    <div class="container my-5">
        <button class="btn bg-primary px-3 py-2 rounded text-white">Supprimer</button>
    </div>
</form>

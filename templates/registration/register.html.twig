{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="container minVhTheme pt-5 ptNav text-center">

        <div class="container m-auto text-center ">
            <div class="m-3 testEt">
                <h2>Enregistrez-vous</h2>
                {{ form_start(InscriptionType) }}
                {{ form_row(InscriptionType.email) }}
                {{ form_row(InscriptionType.Prenom) }}
                {{ form_row(InscriptionType.Nom) }}
                {{ form_row(InscriptionType.genre) }}
                {{ form_row(InscriptionType.date_naissance) }}
                {{ form_row(InscriptionType.Category) }}
                {{ form_row(InscriptionType.plainPassword) }}
                {{ form_row(InscriptionType.agreeTerms) }}
                <div class="invisible">
                    {{ form_row(InscriptionType.roles) }}
                </div>
                <a class="btn bg-primary px-3 py-2 rounded text-white" href="{{ path('app_login') }}"><i class="fas fa-arrow-left"></i> Retour</a>
                <button type="submit" class="btn bg-primary px-3 py-2 rounded text-white">S'enregistrer</button>
            {{ form_end(InscriptionType) }}
            </div>
        </div>
    </div>
{% endblock %}

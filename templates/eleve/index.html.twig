{% extends 'base.html.twig' %}

{% block title %}eleve{% endblock %}

{% block body %}
<div class="container minVhTheme mx-auto ptNav text-center">

    <h1 class="my-3 text-center">Liste des eleves</h1>

    <div class="d-flex my-5">
        <a class="btn bg-primary mr-auto rounded text-white" href="{{ path('eleve_new') }}">Ajouter un élève</a>
    </div>

    <table class="table table-dark">
        <thead>
            <tr class="d-flex text-center">
                <th class="col">Nom du eleve</th>
                <th class="col-2">Action</th>
            </tr>
        </thead>
        <tbody>
        {% for eleve in eleves %}
            <tr class="d-flex text-center">
                <td class="col">{{ eleve.nom }}</td>
                <td class="col-2">
                    <a href="{{ path('eleve_show', {'id': eleve.id}) }}"><i style="font-size: 24px" class="fas fa-eye"></i></a>
                    <a class="mx-2" href="{{ path('eleve_edit', {'id': eleve.id}) }}"><i style="font-size: 24px" class="fas fa-pencil-alt"></i></a>
                    <a href="{{ path('eleve_delete', {'id': eleve.id}) }}"><i style="font-size: 24px" class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">Il n'y a aucun eleve</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

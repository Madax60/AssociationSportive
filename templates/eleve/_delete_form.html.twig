<form method="post" action="{{ path('eleve_delete', {'id': eleve.id}) }}" onsubmit="return confirm('Etes vous sur de supprimer cet eleve ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ eleve.id) }}">

    <div class="container my-5">
        <button class="btn bg-primary px-3 py-2 rounded text-white">Delete</button>
    </div>
</form>

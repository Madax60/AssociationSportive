{% extends 'base.html.twig' %}

{% block title %}Sport{% endblock %}

{% block body %}
<div class="container minVhTheme mx-auto ptNav text-center">

    <h1 class="my-3 text-center">Liste des sports</h1>

    <div class="d-flex my-5">
        <a class="btn bg-primary mr-auto rounded text-white" href="{{ path('sport_new') }}">Ajouter un sport</a>
    </div>

    <table class="table table-dark">
        <thead>
            <tr class="d-flex text-center">
                <th class="col">Nom du sport</th>
                <th class="col-2">Action</th>
            </tr>
        </thead>
        <tbody>
        {% for sport in sports %}
            <tr class="d-flex text-center">
                <td class="col">{{ sport.nom }}</td>
                <td class="col-2">
                    <a href="{{ path('sport_show', {'id' : sport.id}) }}"><i style="font-size: 24px" class="fas fa-eye"></i></a>
                    <a class="mx-2" href="{{ path('sport_edit', {'id': sport.id}) }}"><i style="font-size: 24px" class="fas fa-pencil-alt"></i></a>
                    <a href="{{ path('sport_delete', {'id': sport.id}) }}"><i style="font-size: 24px" class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">Il n'y a aucun sport</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
<div class="container minVhTheme mx-auto ptNav text-center">

    <h1 class="my-3 text-center mt-5">Liste des categories</h1>

    <div class="d-flex my-5">
        <a class="btn bg-primary mr-auto rounded text-white" href="{{ path('category_new') }}">Ajouter une catégorie</a>
    </div>

    <table class="table table-dark">
        <thead>
            <tr class="d-flex text-center">
                <th class="col">Nom de la catégorie</th>
                <th class="col-2">Action</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categorys %}
            <tr class="d-flex text-center">
                <td class="col">{{ category.nom }}</td>
                <td class="col-2">
                    <a href="{{ path('category_show', {'id': category.id}) }}"><i style="font-size: 24px" class="fas fa-eye"></i></a>
                    <a class="mx-2" href="{{ path('category_edit', {'id': category.id}) }}"><i style="font-size: 24px" class="fas fa-pencil-alt"></i></a>
                    <a href="{{ path('category_delete', {'id': category.id}) }}"><i style="font-size: 24px" class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">Il n'y a aucun categorie</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
